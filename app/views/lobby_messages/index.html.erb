<p id="notice"><%= notice %></p>

<h1>Lobby Messages</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Lobby</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lobby_messages.each do |lobby_message| %>
      <tr>
        <td><%= lobby_message.message %></td>
        <td><%= lobby_message.lobby_id %></td>
        <td><%= lobby_message.user_id %></td>
        <td><%= link_to 'Show', lobby_message %></td>
        <td><%= link_to 'Edit', edit_lobby_message_path(lobby_message) %></td>
        <td><%= link_to 'Destroy', lobby_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

