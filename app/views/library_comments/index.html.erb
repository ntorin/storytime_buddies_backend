<p id="notice"><%= notice %></p>

<h1>Library Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Likes</th>
      <th>Story</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @library_comments.each do |library_comment| %>
      <tr>
        <td><%= library_comment.comment %></td>
        <td><%= library_comment.likes %></td>
        <td><%= library_comment.story_id %></td>
        <td><%= library_comment.user_id %></td>
        <td><%= link_to 'Show', library_comment %></td>
        <td><%= link_to 'Edit', edit_library_comment_path(library_comment) %></td>
        <td><%= link_to 'Destroy', library_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Library Comment', new_library_comment_path %>
